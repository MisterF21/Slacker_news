<h2>Submit a Comment below:</h2>
<br>
<%= form_for(@comment) do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author %>
    <p>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </p>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
